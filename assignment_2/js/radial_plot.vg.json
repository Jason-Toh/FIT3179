{
    "$schema":"https://vega.github.io/schema/vega-lite/v5.json",
    "description":"A simple radial chart with embedded data.",
    "width":300,
    "height":300,
    "data":{
       "url":"https://raw.githubusercontent.com/Jason-Toh/FIT3179/main/assignment_2/data/crime_type.csv"
    },
    "layer":[
       {
          "mark":{
             "type":"arc",
             "innerRadius":20,
             "stroke":"#fff",
             "yOffset":-2
          }
       },
       {
          "mark":{
             "type":"text",
             "radiusOffset":10
          },
          "encoding":{
             "text":{
                "field":"percentage",
                "type":"quantitative"
             }
          }
       }
    ],
    "encoding":{
       "theta":{
          "field":"crime_count",
          "type":"quantitative",
          "stack":true
       },
       "radius":{
          "field":"crime_count",
          "type":"quantitative",
          "scale":{
             "type":"sqrt",
             "zero":true,
             "rangeMin":20
          }
       },
       "color":{
          "title":"Crime",
          "field":"ofns_desc",
          "type":"nominal",
          "scale":{
              "scheme":"category10"
          }
       },
       "tooltip":[
          {
             "field":"ofns_desc",
             "type":"nominal",
             "title":"Offence Type"
          },
          {
             "field":"crime_count",
             "type":"quantitative",
             "title":"Offence Count"
          },
          {
             "field":"percentage",
             "type":"quantitative",
             "title":"Percentage (%)"
          }
       ]
    },
    "view":{
       "stroke":null
    }
 }