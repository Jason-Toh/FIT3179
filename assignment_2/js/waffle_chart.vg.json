{
    "$schema":"https://vega.github.io/schema/vega-lite/v5.json",
    "width":300,
    "height":300,
    "data":{
       "url":"https://raw.githubusercontent.com/Jason-Toh/FIT3179/main/assignment_2/data/waffle_race.csv"
    },
    "layer":[
       {
          "mark":{
             "type":"square",
             "size":500
          },
          "encoding":{
             "x":{
                "field":"Column",
                "type":"quantitative",
                "axis":null
             },
             "y":{
                "field":"Row",
                "type":"quantitative",
                "axis":null
             },
             "color":{
                "field":"Race",
                "type":"nominal",
                "scale":{
                   "type":"ordinal",
                   "domain":[
                      "Black",
                      "White",
                      "Black Hispanic",
                      "White Hispanic",
                      "Asian"
                   ],
                   "scheme":"category10"
                },
                "legend":{
                   "labelFont":"Roboto",
                   "labelFontSize":15,
                   "titleFont":"Roboto",
                   "titleFontSize":15,
                   "title":"Race"
                }
             },
             "tooltip":[
                {
                   "field":"Race"
                },
                {
                   "field":"Percentage_Race",
                   "type":"nominal",
                   "title":"Percentage"
                }
             ]
          },
          "title":{
             "text":"Race Distribution",
             "dx":18,
             "orient":"top"
          }
       }
    ],
    "view": {
       "stroke":null
    }
 }